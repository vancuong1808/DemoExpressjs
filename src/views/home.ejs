<!-- views/users/index.ejs - Main User List Page -->
<!DOCTYPE html>
<html>
<head>
  <title>User Management System</title>
  <style>
    * { box-sizing: border-box; }
    body { font-family: Arial, sans-serif; margin: 0; padding: 20px; }
    .container { max-width: 1000px; margin: 0 auto; }
    h2 { text-align: center; margin-bottom: 20px; }
    
    /* Table styles */
    table { border-collapse: collapse; width: 100%; margin: 20px auto; }
    th, td { padding: 12px; border: 1px solid #ddd; text-align: left; }
    th { background-color: #f2f2f2; }
    tr:nth-child(even) { background-color: #f9f9f9; }
    tr:hover { background-color: #f1f1f1; }
    
    /* Button styles */
    .btn-container { text-align: center; margin-bottom: 20px; }
    button, .btn { 
      padding: 8px 16px; 
      margin: 0 5px; 
      cursor: pointer;
      border: none;
      border-radius: 4px;
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
      text-decoration: none;
      display: inline-block;
    }
    button:hover, .btn:hover { background-color: #45a049; }
    .btn-view { background-color: #2196F3; }
    .btn-view:hover { background-color: #0b7dda; }
    .btn-edit { background-color: #ff9800; }
    .btn-edit:hover { background-color: #e68a00; }
    .btn-delete { background-color: #f44336; }
    .btn-delete:hover { background-color: #da190b; }
    
    /* Flash messages */
    .flash-message {
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 4px;
      text-align: center;
    }
    .success { background-color: #dff0d8; color: #3c763d; }
    .error { background-color: #f2dede; color: #a94442; }
  </style>
</head>
<body>
  <div class="container">
    <h2>User Management System</h2>
    
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="flash-message <%= messageType %>">
        <%= message %>
      </div>
    <% } %>
    
    <!-- Add User Button -->
    <div class="btn-container">
      <a href="/users/add" class="btn">Add New User</a>
    </div>
    
    <!-- User Table -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length > 0) { %>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/api/users/<%= user.id %>" class="btn btn-view">View</a>
                <a href="/users/edit/<%= user.id %>" class="btn btn-edit">Edit</a>
                <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn-delete" 
                          onclick="return confirm('Are you sure you want to delete this user?')">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" style="text-align: center;">No users found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>